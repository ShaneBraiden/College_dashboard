{
  "name": "attendance-manager-server",
  "version": "1.0.0",
  "description": "College Attendance Management System - Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "seed": "node seeder.js",
    "migrate": "node scripts/migrate-class-to-batch.js --dry-run",
    "migrate:live": "cross-env DRY_RUN=false node scripts/migrate-class-to-batch.js"
  },
  "keywords": ["attendance", "management", "college", "mern"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^2.0.22",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testMatch": ["**/tests/**/*.test.js"]
  }
}
